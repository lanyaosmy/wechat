/* pages/receiver/index.wxss */
@import "../templates/reList.wxss";
page{
  height: 100%;
  background: #f2f2f2;
}
.topBar{
  width: 100%;
  height: 10%;
  background: #fff;
  position: sticky;
  top:0;
  left:0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.topLeft{
  width: 33.3%;
  height:100%;
  border-right:1rpx solid #f2f2f2; 
  display: flex;
  align-items: center;
  justify-content: center;
  background: #AAE6CC;
}
.bottomBar{
  width: 100%;
  height: 8%;
  background: #fff;
  position: fixed;
  bottom:0;
  left:0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottomLeft{
  width: 33.3%;
  height:100%;
  background: #AAE6CC;
  color: #fff;
  border-right:1rpx solid #f2f2f2; 
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bon{
  background: #5EE083;
}
.scanImage{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.scanTitle{
  font-size: 30rpx;
  font-weight: 700;
}

.mainItem{
  flex-direction: column;
  align-items: center;
  margin: 20rpx;
  display: none;
  margin-bottom: 15%;
}
.tip{
  margin-bottom: 20rpx;
  font-size: 20rpx;
  color: #515151;
}
.on{
  display: flex;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.modalMask{
  height:100%;
  width:100%;
  position:fixed;
  top:0;
  left:0;
  overflow: hidden;
  background: rgba(0,0,0,0.5);
  z-index: 900;
}

.modalMenu{
  position: fixed;
  top:25%;
  left:20%;
  overflow: hidden;
  z-index: 999;
  background: #fff;
  width:60%;
  height:550rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modalMenu button{
  width:100%;
  color: #66ccff;
  font-size: 30rpx;
}
.modalTitle{
  margin: 10rpx;
}
.modalTitle text{
  font-size:26rpx;
  font-weight: 700;
}
.modalCode image{
  width: 400rpx;
  height: 400rpx;
}
