/* pages/login/login.wxss */
page{
  height: 100%;
}
.contain{
  background:#fff;
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon{
  margin-top: 100rpx;
}
.icon image{
  width:128rpx;
  height: 128rpx;
}
.loginform{
  flex:auto;
}
.inputView{
  height: 80rpx;
  margin-top: 20rpx;
  background: #fff;
  width: 100%;
  border-bottom:1rpx solid #55efc4; 
}
.inputView text{
  font-size: 30rpx;
  margin-right: 20rpx;
  line-height: 80rpx;
  flex: block; 
}
.inputView input{
  float: right;
  height: 80rpx;
  font-size: 30rpx;
  margin-right: 20rpx;

}
.inputView image{
  margin: 20rpx 10rpx 20rpx 20rpx;
  float: left;
  width: 40rpx;
  height: 40rpx;
}

.loginButton{
  width: 80%;
  background: #55efc4;
  border-radius: 50rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.registerButton{
  width: 80%;
  background: #fff;
  border: 3rpx solid #55efc4;
  border-radius: 50rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
}
.banner{
  width: 100%;
}