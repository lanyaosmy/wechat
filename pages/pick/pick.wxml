<!--pages/pick/pick.wxml-->
<import src="../templates/listItem.wxml"/>
<view class="swiper-tab"> 
  <view class="swiper-tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="switchNav">待签收</view> 
  <view class="swiper-tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="switchNav">运输中</view> 
  <view class="swiper-tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="switchNav">已签收</view> 
</view> 
 <view style="height:100%;margin-top:84rpx;">
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:100%;" bindchange="bindChange"> 
  <swiper-item> 
   <view class="main">
    <block wx:for="{{notReceList}}" wx:key="orderNum">
     <template is="listItemCode" data="{{...item}}"></template>
    </block>
   </view> 
  </swiper-item> 
  <swiper-item> 
    <view class="main">
      <block wx:for="{{transList}}" wx:key="orderNum">
      <template is="listItem" data="{{...item}}"></template>
      </block>
    </view> 
  </swiper-item> 
  <swiper-item> 
    <view class="main">
      <block wx:for="{{receList}}" wx:key="orderNum">
       <template is="listItemRece" data="{{...item}}"></template>
      </block>
    </view> 
  </swiper-item> 
</swiper> 
</view>
  <view class="modalMask" wx:if="{{showModal}}" catchtouchmove="preventTouchMove">
    <view class="modalMenu" wx:if="{{showModal}}">
      <view class="modalTitle">
        <text>{{location}}</text>
      </view>
      <view class="modalCode">
        <image src="{{picUrl}}"></image>
      </view>
      <button bindtap="onConfirm">确定</button>
    </view>
  </view>


