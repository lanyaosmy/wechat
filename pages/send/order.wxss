/* pages/send/order.wxss */
page{
  height: 100%;
  background: #f2f2f2;
}
.topBar{
  width:100%;
  height:100rpx;
  display:flex;
  align-items: center;
  padding:10rpx;
  background: #aae6cc;
}

.address{
  margin-left: 20rpx;
  font-size: 30rpx;
  width:80%;
}

.position{
  width:50rpx;
  margin-left: 20rpx;
  height:50rpx;
}
.rightRow{
  width:32rpx;
  height:32rpx;
}

.section{
  margin-left:20rpx;
  margin-right:20rpx;
  border:1rpx solid #aaa;
  border-radius: 24rpx;
  padding: 20rpx;
}

.inputline{
  width: 600rpx;
  display: flex;
  align-items: center;
}
.inputline text{
  font-size: 25rpx;
  width: 100rpx;
  text-align: right;
  padding-right: 20rpx;
}

.inputline input{
  line-height:30rpx;
  font-size: 30rpx;
  border-bottom:1rpx solid #aaa;
  width: 500rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
}

.main{
  padding: 20rpx;
}

.label{
  font-size: 30rpx;
  color: #707070;
  margin-top:10rpx;
  margin-bottom:10rpx;
}
picker{
  display: inline-block;
}
.picker{
  font-size: 30rpx;
  border-bottom:1rpx solid #aaa;
  width:480rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
}

button{
  margin-top: 30rpx;
  width:200rpx;
  font-size: 30rpx;
  background:#AAE6CC;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
