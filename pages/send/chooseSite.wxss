/* pages/send/chooseSite.wxss */
page{
  height: 100%;
  background: #f2f2f2;
}
.searchBar{
  margin: 10rpx;
  height:80rpx;
  border:1rpx solid #aaa;
  border-radius: 10rpx;
  border-color: #AAE6CC;
  display: flex;
  align-items: center;
}
/*输入框*/
.inputBox{
  display: inline-block;
  margin-left: 20rpx;
  width: 75%;
  font-size: 30rpx;
}

.infoicon{
  width:40rpx;
  margin-left: 20rpx;
  height:40rpx;
}

.main{
  margin: 30rpx;
}

.title{
  font-size: 20rpx;
  color: #707070;
}

.list radio-group{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.list radio-group label{
  margin: 20rpx;
  font-size: 30rpx; 
}

button{
  margin-top: 30rpx;
  width:200rpx;
  font-size: 30rpx;
  background:#AAE6CC;
}